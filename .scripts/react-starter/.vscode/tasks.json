      "problemMatcher": []
    },
    {
      "label": "npm_run_dev",
      "type": "shell",
      "command": "npm run devbrowser",
      "problemMatcher": []
    },
    {
      "label": "bump_version",
      "type": "shell",
      "command": "if (Get-Command commit-and-tag-version -ErrorAction SilentlyContinue) { commit-and-tag-version } else { Write-Host 'commit-and-tag-version no est√° instalado en el sistema.' }",
      "problemMatcher": []
    },
    {
      "label": "commit",
      "type": "shell",
      "command": "${command:extension.conventionalCommits}",
      "problemMatcher": []
    }
  ]
}