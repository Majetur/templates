{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "setup_environment",
      "type": "shell",
      "command": "./scripts/setup.bat",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": []
    },
    {
      "label": "yarn_dev",
      "type": "shell",
